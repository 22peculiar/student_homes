doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Student Management System

    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      header {
        background-color: #333;
        color: white;
        padding: 1em;
        text-align: center;
      }

      nav {
        display: flex;
        justify-content: center;
        background-color: #555;
        padding: 0.5em;
      }

      nav a {
        color: white;
        text-decoration: none;
        margin: 0 1em;
      }

      main {
        padding: 2em;
      }

      footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 1em;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

  body

    header
      h1 Student Management System

    nav
      a(href="/") Home
      a(href="/login") Login
      a(href="/register") Register
      a(href="/aboutus") About Us
      a(href="/contactus") Contact Us

    main
      h2 Welcome to the Student Management System
      p Your one-stop solution for managing student information.

      // Include additional content here

      // Example: Quick access links
      p Quick Access:
      ul
        li: a(href="/allstudents") View All Students
        li: a(href="/addstudent") Add New Student

    footer
      p &copy; 2024 Student Management System
